extends layout 

block content
   h2 #{title}
   div
    table.table.table-hover
     thead
      tr
        th Username
        th Day 
        th Start at
        th End at
      br
     tbody
     each schedule in schedules
      tr
        td=schedule.firstname + ' ' +schedule.surname
        td=days[schedule.day-1]
        td=schedule.start
        td=schedule.end
      br